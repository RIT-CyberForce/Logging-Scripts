    </rule>

    <rule id="100024" level="8">
      <field name="file">^/sbin | ^/usr/sbin</field>
      <description>Superuser binary file changed!</description>
    </rule>

    <rule id="100025" level="6">
      <field name="file">/etc/apt</field>
